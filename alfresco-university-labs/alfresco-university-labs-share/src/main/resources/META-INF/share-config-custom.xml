	<config evaluator="aspect" condition="gal:selfie">
	   <forms>
		  <form>
			 <field-visibility>
				<show id="gal:who" />
			 </field-visibility>
		  </form>
	   </forms>
	</config>
    <config evaluator="aspect" condition="rev:reviewable">
        <forms>
            <form>
                <field-visibility>
                    <show id="rev:numOfWords" />
                </field-visibility>
            </form>
        </forms>
    </config>
</alfresco-config>
