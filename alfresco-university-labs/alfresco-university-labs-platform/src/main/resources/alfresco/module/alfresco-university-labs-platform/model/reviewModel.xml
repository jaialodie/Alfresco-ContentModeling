<model name="rev:reviewModel" xmlns="http://www.alfresco.org/model/dictionary/1.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">

		<description>Alfresco University Content Modeling</description>
		<author>Alfresco University Student</author>

		<imports>
			<import uri="http://www.alfresco.org/model/dictionary/1.0" prefix="d"/>
			<import uri="http://www.alfresco.org/model/system/1.0" prefix="sys"/>
			<import uri="http://www.alfresco.org/model/content/1.0" prefix="cm"/>
		</imports>

	<namespaces>
		<namespace uri="http://university.alfresco.org/model/review/1.0" prefix="rev"/>
	</namespaces>

		<aspects>
			<aspect name="rev:reviewable">
				<title>Reviewable</title>
				<properties>
					<property name="rev:numOfWords">
						<title>Number of words</title>
						<type>d:int</type>
						<mandatory>true</mandatory>
					</property>
				</properties>
			</aspect>
		</aspects>


</model>
