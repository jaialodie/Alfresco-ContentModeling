<model name="gal:photoGalleryModel" xmlns="http://www.alfresco.org/model/dictionary/1.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">

		<description>Alfresco University Content Modeling</description>
		<author>Alfresco University Student</author>

		<imports>
			<import uri="http://www.alfresco.org/model/dictionary/1.0" prefix="d"/>
			<import uri="http://www.alfresco.org/model/system/1.0" prefix="sys"/>
			<import uri="http://www.alfresco.org/model/content/1.0" prefix="cm"/>
		</imports>

	<namespaces>
		<namespace uri="http://university.alfresco.org/model/gallery/1.0" prefix="gal"/>
	</namespaces>

		<types>
			<type name="gal:photo">
				<title>Gallery Photo</title>
				<parent>cm:content</parent>
				<properties>
					<property name="gal:location">
						<title>Location</title>
						<type>d:text</type>
					</property>
					<property name="gal:people">
						<title>People in Photo</title>
						<type>d:text</type>
						<multiple>true</multiple>
					</property>
				</properties>
				<mandatory-aspects>
					<aspect>cm:titled</aspect>
				</mandatory-aspects>
			</type>
			<type name="gal:album">
				<title>Photo Album</title>
				<parent>cm:folder</parent>
				<associations>
					<association name="gal:coverPhoto">
						<source>
							<mandatory>false</mandatory>
							<many>true</many>
						</source>
						<target>
							<class>gal:photo</class>
							<mandatory>false</mandatory>
							<many>false</many>
						</target>
					</association>
				</associations>
				<mandatory-aspects>
					<aspect>cm:titled</aspect>
				</mandatory-aspects>
			</type>
		</types>
		<aspects>
			<aspect name="gal:selfie">
				<title>Selfie</title>
				<properties>
					<property name="gal:who">
						<title>Person in Selfie</title>
						<type>d:text</type>
						<mandatory>true</mandatory>
					</property>
				</properties>
			</aspect>
		</aspects>


</model>
